{
    "name": "organ_paper_reproduction",
    "resume": true,
    "preload": true,
    "wandb_project_name": "organ paper segmentation",
    "wandb_prediction_examples": 8,
    "wandb_api_key": "<your wandb api key>",
    "model": {
        "name": "OrganNet25D",
        "hdc_dilations": [
            [
                1,
                2,
                5,
                7
            ],
            [
                1,
                2,
                5,
                7
            ],
            [
                1,
                2,
                5,
                7
            ]
        ]
    },
    "training": {
        "early_stopping_patience": 4,
        "epochs": 300,
        "detect_bad_gradients": false,
        "grad_norm_clip": 1,
        "split_ratio": 0.77,
        "batch_size": 2,
        "loss": {
            "name": "CombinedLoss",
            "alpha": [
                1.0,
                4.0,
                1.0,
                4.0,
                4.0,
                1.0,
                1.0,
                3.0,
                3.0,
                0.5
            ]
        },
        "optimizer": {
            "name": "Adam",
            "learning_rate": 0.001,
            "betas": [
                0.9,
                0.999
            ]
        },
        "lr_scheduler": {
            "name": "MultiStepLR",
            "gamma": 0.1,
            "milestones": [
                50,
                100
            ]
        },
        "dataset": {
            "root": "./data/train",
            "num_workers": 2,
            "labels": [
                "BrainStem",
                "Chiasm",
                "Mandible",
                "OpticNerve_L",
                "OpticNerve_R",
                "Parotid_L",
                "Parotid_R",
                "Submandibular_L",
                "Submandibular_R"
            ],
            "label_transforms": [
                {
                    "name": "Transpose",
                    "dim_1": 0,
                    "dim_2": -1
                },
                {
                    "name": "CropAroundBrainStem",
                    "width": 256,
                    "height": 256,
                    "depth": 48
                }
            ],
            "sample_transforms": [
                {
                    "name": "Transpose",
                    "dim_1": 0,
                    "dim_2": -1
                },
                {
                    "name": "CropAroundBrainStem",
                    "width": 256,
                    "height": 256,
                    "depth": 48
                },
                {
                    "name": "StandardScaleTensor"
                }
            ]
        }
    }
}